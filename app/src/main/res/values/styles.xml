<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/roboto_300</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle900">
        <item name="android:fontFamily">@font/roboto_900</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextStyle">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/back_button_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_text_storyline" parent="TextStyle">
        <item name="android:alpha">0.75</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">20sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cast" parent="TextStyle900">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/castcolor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="under_name_film" parent="TextStyle">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Review" parent="TextStyle900">
        <item name="android:letterSpacing">4sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/back_button_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="chris_hemsw">
        <item name="android:textSize">
            12sp
        </item>

        <item name="android:textStyle">
            bold
        </item>

        <item name="android:textColor">
            #D8D8D8
        </item>
    </style>

    <style name="mark_ruffal">

